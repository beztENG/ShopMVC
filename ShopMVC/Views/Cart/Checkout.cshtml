@model IEnumerable<ShopMVC.ViewModels.CartItem>

@{
    ViewData["Title"] = "Checkout";
}

<div class="container py-5">
    <h1 class="mb-4 text-center">Order Summary</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>$@item.UnitPrice.ToString("0.00")</td>
                            <td>@item.Quantity</td>
                            <td>$@item.TotalPrice.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3">Subtotal:</td>
                        <td>$@ViewBag.Subtotal.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td colspan="3">Shipping:</td>
                        <td>$@ViewBag.ShippingTotal.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td colspan="3">Total:</td>
                        <td>$@ViewBag.Total.ToString("0.00")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8 offset-md-2 text-center">
            @* Replace this with your actual payment processing form/button *@
            <button class="btn btn-primary btn-lg">Place Order</button>
        </div>
    </div>
</div>
