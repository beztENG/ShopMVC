@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Home Page";
}

@if (!Context.User.Identity.IsAuthenticated)
{
    <section class="hero bg-light py-5">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">Welcome to ShopMVC</h1>
            <p class="lead">Discover a curated selection of products tailored to your unique needs.</p>
            <a href="/Customer/LogIn" class="btn btn-primary btn-lg rounded-pill mt-4">Start Exploring</a>
        </div>
    </section>
}

@if (Context.User.Identity.IsAuthenticated && User.IsInRole("0"))
{
    <section class="hero bg-light py-5">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-3">Welcome, @User.Identity.Name!</h1>
            <p class="lead">Let's find your next favorite item.</p>
            <a href="/Product/Index" class="btn btn-primary btn-lg rounded-pill mt-4">Shop Now</a>
        </div>
    </section>
}

@if (Context.User.Identity.IsAuthenticated && Context.User.IsInRole("1"))
{
    <div class="container mt-5">
        <div class="row">

            <h3 class="display-3 text-center font-monospace mb-5">Welcome, @User.Identity.Name!</h3>
            <div class="col-md-4 mb-4">
                <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm jump-card">
                        <div class="card-body text-center">
                            <div class="logo-container">
                                <i class="fas fa-tachometer-alt fa-3x"></i>
                            </div>
                            <h5 class="card-title section-name">Dashboard</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                <a asp-controller="Management" asp-action="ProductIndex" class="text-decoration-none">
                    <div class="card shadow-sm jump-card">
                        <div class="card-body text-center">
                            <div class="logo-container">
                                <i class="fas fa-box-open fa-3x"></i>
                            </div>
                            <h5 class="card-title section-name">Products Management</h5>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-md-4 mb-4">
                <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm jump-card">
                        <div class="card-body text-center">
                            <div class="logo-container">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <h5 class="card-title section-name">User Management</h5>
                        </div>
                    </div>
                </a>
            </div>

        </div>
    </div>
}

<style>
    .jump-card {
        transition: transform 0.2s ease-in-out;
    }

        .jump-card:hover {
            transform: translateY(-10px);
        }

    .logo-container {
        margin-bottom: 15px;
    }

    .section-name {
        font-size: 1.25rem;
        font-weight: bold;
        color: #000;
    }

    .card-body {
        padding: 2rem;
    }
</style>



