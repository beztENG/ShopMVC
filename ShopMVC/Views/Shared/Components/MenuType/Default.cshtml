@model IEnumerable<ShopMVC.ViewModels.MenuTypeVM>

<div class="mb-3">
    <h4 class="mb-3">Categories</h4>
    <ul class="list-unstyled fruite-categorie">
        @foreach (var item in Model)
        {
            <li>
                <div class="d-flex justify-content-between align-items-center fruite-name">
                    <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@item.CategoryID">
                        <i class="fas fa-apple-alt me-2"></i>@item.CategoryName
                    </a>
                    <span class="badge bg-secondary">@item.ProductCount</span>
                </div>
            </li>
        }
    </ul>
</div>
