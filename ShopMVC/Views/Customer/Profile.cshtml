@using Microsoft.AspNetCore.Http
@model ShopMVC.ViewModels.CustomerProfileVM

@{
    ViewData["Title"] = "Profile";
}

<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        @if (Context.User.Identity.IsAuthenticated)
        {
            <h1 class="mb-4 text-center">Profile</h1>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(Model.Hinh))
                        {
                            <img src="~/Hinh/KhachHang/@Model.Hinh" id="profileImage" alt="Profile Picture" class="img-fluid rounded-circle mb-3"
                                 style="max-width: 150px; max-height: 150px; cursor: pointer; width: 150px; height: 150px; border-radius: 50%;">
                        }
                        else
                        {
                            <img src="~/images/user.jpg" id="profileImage" alt="Default Profile Picture" class="img-fluid rounded-circle mb-3"
                                 style="max-width: 150px; max-height: 150px; cursor: pointer; width: 150px; height: 150px; border-radius: 50%;">
                        }
                    </div>

                    <form id="profileImageForm" asp-action="UpdateProfileImage" enctype="multipart/form-data" style="display: none;">
                        <input type="file" name="Hinh" id="imageInput" accept="image/*" style="display: none;" />
                    </form>

                    <div class="form-item mb-3">
                        <label asp-for="@Model.MaKh" class="form-label"></label>
                        <input asp-for="@Model.MaKh" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.HoTen" class="form-label"></label>
                        <input asp-for="@Model.HoTen" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.Email" class="form-label"></label>
                        <input asp-for="@Model.Email" type="email" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.DienThoai" class="form-label"></label>
                        <input asp-for="@Model.DienThoai" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.DiaChi" class="form-label"></label>
                        <input asp-for="@Model.DiaChi" type="text" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.NgaySinh" class="form-label"></label>
                        <input asp-for="@Model.NgaySinh" type="date" class="form-control" disabled>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.GioiTinh" class="form-label"></label>
                        <input asp-for="@Model.GioiTinh" type="checkbox" class="form-check-input" disabled>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="container py-5">
                <div class="row">
                    <div class="col-lg-8 mx-auto text-center">
                        <p>You need to Log In to see the Profile.</p>
                        <a href="/Customer/LogIn" class="btn btn-primary">Log in</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('profileImage').addEventListener('click', function () {
            document.getElementById('imageInput').click();
        });

        document.getElementById('imageInput').addEventListener('change', function () {
            if (this.files && this.files[0]) {
                document.getElementById('profileImageForm').submit();
            }
        });
    </script>
}
