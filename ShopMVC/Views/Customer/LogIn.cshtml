@model ShopMVC.ViewModels.LoginVM
@{
    ViewData["Title"] = "LogIn";
}

<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Log In</h1>
        <form asp-action="LogIn" asp-route-returnurl="@ViewBag.ReturnUrl">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="form-item mb-3">
                        <label asp-for="@Model.Email" class="form-label"></label><sup>*</sup>
                        <input asp-for="@Model.Email" type="text" class="form-control">
                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                    </div>
                    <div class="form-item mb-3">
                        <label asp-for="@Model.Password" class="form-label"></label><sup>*</sup>
                        <input asp-for="@Model.Password" type="password" class="form-control">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center mb-4">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary text-uppercase">Log In</button>
                        </div>
                    </div>
                    <div class="row justify-content-center mb-4">
                        <div class="col-12 text-center">
                            <p>You don't have an account? <a asp-action="Register" asp-controller="Customer">Register now</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>