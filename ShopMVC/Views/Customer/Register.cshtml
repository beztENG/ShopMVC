@model ShopMVC.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid py-5 bg-light">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Register</h1>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }

        <form asp-action="Register" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-item mb-3">
                        <label asp-for="UserName" class="form-label"></label><sup>*</sup>
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-item mb-3">
                        <label asp-for="Password" class="form-label"></label><sup>*</sup>
                        <input asp-for="Password" type="password" class="form-control">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="FullName" class="form-label"></label><sup>*</sup>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-check mb-3">
                        <input asp-for="Gender" class="form-check-input" type="checkbox">
                        <label class="form-check-label" for="IsMale">Male?</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="BirthDate" class="form-label"></label>
                        <input asp-for="BirthDate" type="date" class="form-control" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-item mb-3">
                        <label asp-for="Image" class="form-label">Profile Picture</label>
                        <input type="file" name="Image" class="form-control" />
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary text-uppercase">Register</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
